{
  "name": "wp-modern-starter-kit",
  "version": "1.0.0",
  "description": "Modern WordPress Starter Kit",
  "author": "i-Willink Inc.",
  "license": "MIT",
  "scripts": {
    "start": "npm run dev",
    "dev": "concurrently \"npm run watch:css\" \"npm run env:start\"",
    "build": "tailwindcss -i ./src/css/style.css -o ./dist/style.css --minify",
    "watch:css": "tailwindcss -i ./src/css/style.css -o ./dist/style.css --watch",
    "env:start": "wp-env start",
    "env:stop": "wp-env stop",
    "env:destroy": "wp-env destroy",
    "lint": "npm run lint:style && npm run lint:js",
    "lint:style": "wp-scripts lint-style src/**/*.css",
    "lint:js": "wp-scripts lint-js src/**/*.js",
    "format": "wp-scripts format",
    "zip": "npm run build && mkdir -p dist && zip -r dist/wp-modern-starter-kit.zip . -x \"node_modules/*\" \"src/*\" \".git/*\" \"dist/*.zip\" \".github/*\" \"*.md\" \"wp-env.json\""
  },
  "dependencies": {
    "concurrently": "^8.2.2"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.19",
    "@wordpress/env": "^9.0.0",
    "@wordpress/scripts": "^27.0.0",
    "tailwindcss": "^3.4.1"
  }
}
